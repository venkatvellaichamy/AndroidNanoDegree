<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeScreen"
    android:background="#FFFFFF" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top" >

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Spotify Streamer"
            android:id="@+id/btnSpotifyStreamer"
            android:layout_gravity="left|top"
            android:layout_marginTop="10dp"
            android:onClick="sendMessage"
            android:background="#42A5F5"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Scores App"
            android:id="@+id/btnScoresApp"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="10dp"
            android:onClick="sendMessage"
            android:background="#42A5F5"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Build It Bigger"
            android:id="@+id/btnBuildItBigger"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="30dp"
            android:onClick="sendMessage"
            android:background="#42A5F5"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Library"
            android:id="@+id/btnLibrary"
            android:layout_gravity="right|top"
            android:layout_marginTop="10dp"
            android:onClick="sendMessage"
            android:background="#42A5F5"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="XYZ Reader"
            android:id="@+id/btnXYZReader"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="sendMessage"
            android:background="#42A5F5"
            android:textColor="#FFF"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="MY APP"
            android:id="@+id/btnMyApp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="30dp"
            android:onClick="sendMessage"
            android:background="#C62828"
            android:textColor="#FFF"/>
    </FrameLayout>
</RelativeLayout>
